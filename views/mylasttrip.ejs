<!DOCTYPE html>
<html lang="fr">
<head>
  <!-- MEATA -->
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- BOOTSTRAP -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <!-- CSS -->
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <title><%= title %></title>
</head>
<body>
  
<div id="wrapper">

    <!-- HEADER -->
    <%- include('./template/header') %> 

    <!-- FRONT-END HERE -->
    <div class="d-flex justify-content-center mt-5 p-5">
      <div class="d-flex flex-column align-items-center" >

        <p style="color: #fff" class="fs-1 me-auto ms-5">My tickets:</p>

        <!-- USER CARD LIST -->
        <table class="table table-borderless bg-white mt-3">
          <thead>
            <tr>
              <th scope="col">Date</th>
              <th scope="col">Journey</th>
              <th scope="col">Departure time</th>
              <th scope="col">Price</th>
            </tr>
          </thead>

          <!-- PRODUCTS LIST -->
          <tbody>

            
            <!-- Si l'utilisateur n'a jamais passé de commande -->
            <% if (userJourneys.journeysId.length == 0) { %> 

            <tr class="text-center table-secondary">
              <td class="text-center" colspan="4">No tickets</td>
            </tr>

            <% } else { %>

            <% for (var i = 0; i < userJourneys.journeysId.length; i++) {%> 
              <!-- Ticket -->
            <tr>
          
              <!-- DATE day/month/year-->
              <td><%= userJourneys.journeysId.date %>2</td>
              
              <!-- DEPARTURE / ARRIVAL CITIES -->
              <td><%= userJourneys.journeysId.departure %> <span> / </span> <%= userJourneys.journeysId.arrival %></td>
              
              <!-- DEPARTURE TIME -->
              <td><%= userJourneys.journeysId.departureTime %></td>

              <!-- PRICE -->
              <td><%= userJourneys.journeysId.price %> €</td>
            </tr>
            <% } %>
            <% } %> 
          </tbody>
          
        </table>

        <!-- APPARITION POP-UP -->
        <a href="/homepage" class="ms-auto me-3">
          <button type="button" class="btn btn-danger btn-lg ms-4">Home</button>
        </a>
        
          
      </div>
    </div>

    <!-- FOOTER -->
    <%- include('./template/footer') %> 
    
  </div>
</body>
</html>