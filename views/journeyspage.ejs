<!DOCTYPE html>
<html lang="fr">
<head>
  <!-- MEATA -->
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- FONT AWESOME -->
  <script src="https://kit.fontawesome.com/06128cb24d.js" crossorigin="anonymous"></script>
  <!-- BOOTSTRAP -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <!-- CSS -->
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <title><%= title %></title>
</head>
<body>
  
<div id="wrapper">

    <!-- HEADER -->
    <%- include('./template/header') %> 

    <!-- FRONT-END HERE -->
    <div class="d-flex justify-content-center mt-5 p-5">
      <div class="d-flex flex-column align-items-center" >

        <p style="color: #fff" class="fs-1">Tickets avaible on <%= ticketDate %> :</p>

        <!-- TRAINS LIST -->
        <ul class="list-group">

          <!-- BOUCLE A COMMENCER ICI -->
          <% for (var i = 0; i < journeysFound.length; i++) {%>
            <form action="/add-ticket?ticketId=<%=journeysFound[i].id%>" method="post" >
            <li   class="trainsFind list-group-item mb-3 d-flex align-items-center justify-content-between py-4">

              <!-- DEPARTURE / DESTINATION CITIES -->
            <p class="mb-0 fw-bold fs-5"><%= journeysFound[i].departure %><span> / </span><%= journeysFound[i].arrival %></p>

            <!-- DEPARTURE TIME -->
            <p class="mb-0">Train departure at : <%= journeysFound[i].departureTime %></p>
            
              <!-- QUANTITY -->
              <div width="100">
                <input value="1" class="form-control px-0 text-center" width="100px" type="number" name="quantity">
              </div>
              
              <!-- PRICE -->
              <div class="d-flex align-items-center">
                <p class="mb-0 fw-bold fs-4"><%= journeysFound[i].price %> â‚¬</p>
                
                  <button type="submit" class="btn btn-danger btn-lg ms-4">Ok</button>
                </form>
            </div>
            </li>
          <% } %> 
        </ul>

        <a href="/homepage" class="my-auto">
          <button type="submit" class="btn btn-danger btn-lg ms-4">new search</button>
        </a>
          
      </div>
    </div>

    <!-- FOOTER -->
    <%- include('./template/footer') %> 
    
  </div>
</body>
</html>