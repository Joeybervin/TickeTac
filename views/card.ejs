<!DOCTYPE html>
<html lang="fr">
<head>
  <!-- MEATA -->
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- FONT AWESOME -->
  <script src="https://kit.fontawesome.com/06128cb24d.js" crossorigin="anonymous"></script>
  <!-- BOOTSTRAP -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <!-- CSS -->
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <title><%= title %></title>
</head>
<body>
  
<div id="wrapper">

    <!-- HEADER -->
    <%- include('./template/header') %> 

    <!-- FRONT-END HERE -->
    <div class="d-flex justify-content-center mt-5 p-5">
      <div class="d-flex flex-column align-items-center" >

        <p style="color: #fff" class="fs-1 me-auto ms-5">My tickets:</p>

        <!-- USER CARD LIST -->
        <table class="table table-borderless bg-white mt-3 align-middle">
          <thead>
            <tr>
              <th scope="col">N°</th>
              <th scope="col">Journey</th>
              <th scope="col">Date</th>
              <th scope="col">Departure time</th>
              <th class="text-center" scope="col">Quantity</th>
              <th scope="col">Price</th>
              <th class="text-center" scope="col">Delete</th>
            </tr>
          </thead>
          <!-- PRODUCTS LIST -->
          <tbody>
            <!-- Product -->
            <!-- Boucle à commencer ici -->
            <% for (var i = 0; i < ticketsCard.length; i++) { %>
            <tr>
              <form action="/update-ticket" method="post">
                <!-- INDEX -->
                <th scope="row">1</th>
                <!-- DEPARTURE :µ/ DESTINATION CITIES -->
                <td><%= ticketsCard[i].departure %> <span> / </span> <%= ticketsCard[i].departure %> </td>
                <!-- DATE day/month/year-->
                <td><%= ticketsCard[i].departure %> </td>
                <!-- DEPARTURE TIME -->
                <td><%= ticketsCard[i].departure %> </td>
                <!-- QUANTITY -->
                <div class="input-group mb-3">
                  <input type="text" class="form-control" placeholder="quanity" aria-label="quanity" aria-describedby="button-addon2" class="text-center" value=<%= ticketsCard[i].quantity name="quantity" %>>
                  <button class="btn btn-outline-danger" type="submit" id="button-addon2"><i class="fa-solid fa-arrows-rotate"></i></button>
                </div>
                <!-- PRICE -->
                <td><%= ticketsCard.price %>  €</td>
                <!-- Pour supprimer les éléments du panier -->
                <td class="text-center" >
                  <a href="/delete-ticket?ticketId=<%= i %> "></a>
                  <button type="button" class="btn btn-outline-danger">
                    <i class="fa-regular fa-trash-can"></i>
                  </button>

                  <!-- Je récupère l'indice de mon ticket lors de l'update de la quantité -->
                  <input type="hidden" name="indice" value=<%= i %> >
                </td>
              </form>
            </tr>
            <% } %>
          </tbody>
          
        </table>

        
        <!-- APPARITION POP-UP -->
        <div class="ms-auto me-3">
          <button type="button" class="btn btn-danger btn-lg ms-4">Confirm</button>
        </div>
        
          
      </div>
    </div>

    <!-- FOOTER -->
    <%- include('./template/footer') %> 
    
  </div>
</body>
</html>