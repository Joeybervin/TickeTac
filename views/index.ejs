<!DOCTYPE html>
<html lang="fr">
<head>
  <!-- MEATA -->
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- BOOTSTRAP -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <!-- CSS -->
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <!-- GOOGLE -->
  <script src="https://kit.fontawesome.com/aabe4e5323.js" crossorigin="anonymous"></script>
<link href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined" rel="stylesheet">

  <title><%= title %></title>
</head>
<body>
  
<div id="wrapper">

    <!-- HEADER -->
    <%- include('./template/header') %> 


    <!-- FORM -->
    <div class="container">

      <div class="row">
        <div  class="d-flex justify-content-around mt-5 pt-5">

          <!-- ================== Sign In =============================== -->

          <div class="row">
            <div style="color: #fff" class="d-flex flex-column align-items-center fs-1">
              <!-- form name -->
              <p>Sign In : </p>

              <form action="/signIn" method="post" class="d-flex flex-column justify-content-between align-items-center" action="" method="post">
                <!-- email -->
                <input class="p-2 my-3 fs-5 form-control btn-outline" placeholder="Email" type="email" name="email" id="">

                <!-- Password -->
                <div class="input-group">
                  <input id="input1" placeholder="Password" type="password" name="password" class="p-2 my-3 fs-5 form-control btn-outline" aria-label="Recipient's username" aria-describedby="button-addon2" value="" name="password">
                  <button onclick="myFunction('input1')" class="p-2 my-3 fs-5 btn  bg-white" type="button" id="btn1"><i class="fa-regular fa-eye"></i></button>
                </div>


                <!-- <div class="d-flex"> 
                  <div class="d-flex flex-column">
                   <input class="p-2 my-3 fs-5" placeholder="Password"  type="password" value="" name="password" id="myInputSI">
                      <div class="d-flex justify-content-center align-items-center">
                        <p class="fs-5 mb-0 me-3">Show Password</p>
                        <input type="checkbox" onclick="myFunction()">
                      </div>
                  </div>
                </div> -->

                <div class="mt-2 text-center">
                  <button type="submit" class="btn btn-danger btn-lg">Confirm</button>
                  <!-- User not found -->
                  <% if (newUser) {%> 
                    <p class="fs-5 mt-3">Create an account</p>
                    <% } %> 
                </div>
                
              </form>
            </div>
          </div>

          <!-- ================== Sign Up =============================== -->
          <div class="row">
            <div style="color: #fff" class="d-flex flex-column align-items-center fs-1">
              <!-- form name -->
              <p>Sign Up : </p>

              <form action="/signUp" method="post" class="d-flex flex-column justify-content-between align-items-center" action="" method="post">
                <!-- firstname -->
                <input class="p-2 my-3 fs-5 form-control btn-outline" placeholder="FirstName" type="text" name="firstName" id="">
                <!-- lastname -->
                <input class="p-2 my-3 fs-5 form-control btn-outline" placeholder="LastName" type="text" name="lastName" id="">
                <!-- email -->
                <input class="p-2 my-3 fs-5 form-control btn-outline" placeholder="Email" type="email" name="email" id="">
                <!-- Password -->
                <div class="input-group">
                  <input id="input2" placeholder="Password" type="password" name="password" class="p-2 my-3 fs-5 form-control btn-outline" aria-label="Recipient's username" aria-describedby="button-addon2" value="" name="password">
                  <button onclick="myFunction('input2')" class="p-2 my-3 fs-5 btn btn-outline bg-white" type="button" id="btn2"><i class="fa-regular fa-eye"></i></button>
                </div>
              
                  
                </div>
                <div class="mt-2 text-center">
                  <button type="submit" class="btn btn-danger btn-lg">Confirm</button>
                  <!-- User exist in the database -->
                  <% if (alreadyMember) {%> 
                  <p class="fs-5 mt-3">You are already registered</p>
                  <% } %> 
                </div>
                
              </form>
            </div>
          </div>
        
        </div>
      </div>



    </div>

     <!-- FOOTER -->
     <%- include('./template/footer') %> 
    

  </div>
  <script src="/javascripts/script.js"></script>
</body>
</html>
